    <!-- =============13. Inventive_wishlist_page                ==================-->
    <template id="rd_website_sale_wishlist_inherit" inherit_id="website_sale_wishlist.product_wishlist" priority="20">
        <xpath expr="//div[@id='wrap']" position ="attributes">
            <attribute name="class" add="inventive_wishlist_page" separator=" "/>
        </xpath>
        <xpath expr="//div[@id='wrap']//div[hasclass('oe_website_sale')]" position ="before">
            <div class="container">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/" class="active" >Home</a></li>
                    <li class="breadcrumb-item"><a href="/shop" class="active" >Shop</a></li>
                    <li class="breadcrumb-item" t-if="not category">Wishlist</li>
                    <t t-foreach="categories" t-as="c">
                        <t t-call="theme_inventive.inventive_category_recursive"/>
                    </t>
                </ol>
            </div>
        </xpath>
        <xpath expr="//div[hasclass('oe_website_sale')]//table" position ="replace">
            <div id="products_grid" class="row">
                <div class="col-12 four_column_view"  t-if="wishes">
                    <t t-foreach="wishes" t-as="wish">
                        <t t-set="combination_info" t-value="wish.product_id.product_tmpl_id._get_combination_info(only_template=True, add_qty=add_qty or 1, pricelist=pricelist)"/>
                        <div class="oe_product oe_product_cart" t-if="wish" t-att-data-wish-id='wish.id' t-att-data-product-id='wish.product_id.id'>
                            <form action="" method="post" disable="disabled" class="card oe_product_cart">
                                <div class="card-body p-1 oe_product_image">
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()" />
                                    <a t-att-href="'/shop/product/%s' % slug(wish.product_id.product_tmpl_id)">
                                        <span t-field="wish.product_id.image_1920"
                                            t-options="{'widget': 'image', 'preview_image': 'image_1024' if product_image_big else 'image_256'}"
                                            class="d-flex h-100 justify-content-center align-items-center"/>
                                        <span class="mask"/>
                                    </a>
                                    <t t-set="show_quick_view_btn" t-value="request.env['ir.config_parameter'].sudo().get_param('theme_inventive.product_quick_view')"/>
                                    <span t-if="show_quick_view_btn" class="btn inventive_product_quick_view"  title="Quick View" t-att-product-template-id="wish.product_id.product_tmpl_id.id" data-type="quick"><span class="fa fa-search" role="img"/></span>
                                </div>
                                <div class="card-body p-0 text-center o_wsale_product_information">
                                    <div class="p-2 o_wsale_product_information_text">
                                       <h6 class="o_wsale_products_item_title">
                                           <a itemprop="name" t-att-href="'/shop/product/%s' % slug(wish.product_id.product_tmpl_id)" t-att-content="wish.product_id.display_name"><t t-esc="wish.product_id.display_name"/></a>
                                       </h6>
                                       <t t-call="theme_inventive.inventive_product_rating_star_template">
                                           <t t-set="product" t-value="wish.product_id.product_tmpl_id"/>
                                       </t>
                                       <div class="product_price" itemprop="offers" itemscope="itemscope" itemtype="http://schema.org/Offer">
                                            <del t-attf-class="text-danger mr-2 {{'' if combination_info['has_discounted_price'] else 'd-none'}}" style="white-space: nowrap;" t-esc="combination_info['list_price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}" />
                                            <span t-if="combination_info['price']" t-esc="combination_info['price']" t-options="{'widget': 'monetary', 'display_currency': website.currency_id}"/>
                                            <span itemprop="price" style="display:none;" t-esc="combination_info['price']" />
                                            <span itemprop="priceCurrency" style="display:none;" t-esc="website.currency_id.name" />
                                       </div>
                                    </div>
                                    <div class="o_wsale_product_btn">
                                        <button type="button" role="button" class="d-none d-md-inline-block btn btn-secondary  o_add_compare" title="Compare" aria-label="Compare" t-att-data-product-product-id="wish.product_id.id" data-action="o_comparelist"><span class="fa fa-exchange"/></button>
                                        <div class="btn-cart">
                                             <a href="#" class="btn btn-primary o_wish_add" aria-label="Shopping cart" title="Shopping cart">
                                                 <span class="text ">Add To Cart</span>
                                             </a>
                                         </div>
                                    </div>
                                </div>
                                <button type="button" class="btn o_wish_rm">X</button>
                            </form>
                        </div>
                    </t>
                </div>
            </div>
            <a href="/shop" class="btn btn-primary mb32">
                <span class="d-none d-md-inline-block">Continue Shopping</span>
                <span class="d-md-none d-inline-block">Continue</span>
            </a>
        </xpath>
    </template>


